{
    "name": "trevipay/trevipay-php",
    "description": "TreviPay PHP Library",
    "license": "MPL-2.0",
    "require": {
        "php": ">=7.1",
        "guzzlehttp/guzzle": "^6.0 || ^7.3.0",
        "monolog/monolog": "^1.0 || ^2.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "mockery/mockery": "^1.4",
        "squizlabs/php_codesniffer": "3.*",
        "fakerphp/faker": "v1.16.0"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-cobertura ./cobertura-report.xml --coverage-text",
        "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs --standard=PSR12 ./lib"
    },
    "autoload": {
        "psr-4": {
            "TreviPay\\TreviPay\\": "lib/"
        }
    }
}
