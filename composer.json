{
  "name": "trevipay/trevipay-php",
  "description": "TreviPay PHP Library",
  "type": "magento2-library",
  "license": "MPL-2.0",
  "repositories": {
    "magento": {
      "type": "composer",
      "url": "https://repo.magento.com/"
    }
  },
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^6.0 || ^7.3.0",
    "monolog/monolog": "^2.0 || ^3.9.0"
  },
  "require-dev": {
    "fakerphp/faker": "v1.16.0",
    "magento/framework": "^102.0.3 || 103.0.*",
    "mockery/mockery": "^1.4",
    "phpunit/phpunit": "^9",
    "squizlabs/php_codesniffer": "3.*"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --coverage-cobertura cobertura-report.xml --coverage-text",
    "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs --standard=PSR12 ./lib"
  },
  "version": "1.0.10",
  "autoload": {
    "files": [
      "registration.php"
    ],
    "psr-4": {
      "TreviPay\\TreviPay\\": "lib/"
    }
  },
  "config": {
    "allow-plugins": {
      "magento/composer-dependency-version-audit-plugin": true
    }
  }
}
